{
  "diagnostic.checkCurrentLine": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "json",
    "css",
    "html",
    "go",
    "ts",
    "jsx",
    "tsx",
    "typescript",
    "javascript",
    "javascriptreact",
    "typescriptreact"
  ],
  "eslint.run": "onType",
  "eslint.autoFixOnSave": true,
  "eslint.alwaysShowStatus": true,
  "languageserver": {
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "trace.server": "verbose",
      "filetypes": ["go"]
    }
  }
}
